  $("textarea").keyup(function(){
	  var words = $('textarea').val().length;
      $(".remChar").text(1000 -words +" characters left")
  });
  
  $("#selectable").on('click',function(){
	//  alert("sam");
	
	var val=$("#selectable .ui-selected").text();
	
	if(val=="- -")
    {
		 $("#satisfaction").val(1);
    }
	else if(val=="-")
    {	
		 $("#satisfaction").val(2);
    }
	else if(val=="+ -")
    {	
		 $("#satisfaction").val(3);
    }
	else if(val=="+")
    {	
		 $("#satisfaction").val(4);
    }
	else if(val=="+ +")
    {	
		 $("#satisfaction").val(5);
    }
	});
  
